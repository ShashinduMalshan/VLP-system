<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="dashboardAnc" prefHeight="944.0" prefWidth="902.0"
            styleClass="main-container" stylesheets="@../CSS/dash.css"
            xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.assignment.service.Controller.DashboardController">

    <HBox spacing="20.0" styleClass="dashboard-container" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Main Content Section -->
        <VBox spacing="20.0" styleClass="dashboard-container" HBox.hgrow="ALWAYS">

            <!-- Top Section with Stats and Line Chart -->
            <HBox spacing="20.0" VBox.vgrow="NEVER">
                <!-- First Stats Card -->
                <VBox prefWidth="200.0" styleClass="stats-card" alignment="CENTER_LEFT">
                    <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
                    <Label styleClass="stats-label" text="Total Drivers" wrapText="true" />
                    <Label fx:id="DriverCountlbl" styleClass="stats-value" text="346" />
                </VBox>

                <!-- Line Chart -->
                <LineChart fx:id="lineChart" prefHeight="150.0" styleClass="top-line-chart"
                           HBox.hgrow="ALWAYS" animated="true" createSymbols="false">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" tickLabelFill="#2C3E50" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" tickLabelFill="#2C3E50" autoRanging="true" />
                    </yAxis>
                </LineChart>

                <!-- Second Stats Card -->
                <VBox prefWidth="200.0" styleClass="stats-card" alignment="CENTER_LEFT">
                    <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
                    <Label styleClass="stats-label" text="Active Drivers" wrapText="true" />
                    <Label fx:id="ActiveDriverCountLbl" styleClass="stats-value" text="298" />
                </VBox>
            </HBox>

            <!-- Middle Section - Area Chart -->
            <VBox styleClass="area-chart-card" VBox.vgrow="ALWAYS">
                <Label styleClass="area-chart-title" text="Monthly License Suspensions" />
                <AreaChart fx:id="AreaChart" prefHeight="250.0" animated="true" createSymbols="false">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" tickLabelFill="#2C3E50" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" tickLabelFill="#2C3E50" autoRanging="true" />
                    </yAxis>
                </AreaChart>
            </VBox>

            <!-- Donut Charts Section -->
            <HBox spacing="20.0" styleClass="donut-charts-container">
                <!-- Traffic: New vs Returning -->
                <VBox styleClass="donut-chart-card" HBox.hgrow="ALWAYS">
                    <Label styleClass="donut-chart-title" text="Traffic" />
                    <Label styleClass="donut-chart-subtitle" text="New vs Returning" />
                    <PieChart fx:id="trafficDonutChart" legendVisible="false" prefHeight="200.0"
                              styleClass="donut-chart" labelsVisible="false" clockwise="true" startAngle="90" />
                </VBox>

                <!-- Revenue: New vs Recurring -->
                <VBox styleClass="donut-chart-card" HBox.hgrow="ALWAYS">
                    <Label styleClass="donut-chart-title" text="Revenue" />
                    <Label styleClass="donut-chart-subtitle" text="New vs Recurring" />
                    <PieChart fx:id="revenueDonutChart" legendVisible="false" prefHeight="200.0"
                              styleClass="donut-chart" labelsVisible="false" clockwise="true" startAngle="90" />
                </VBox>

                <!-- Traffic: Direct vs Referrals -->
                <VBox styleClass="donut-chart-card" HBox.hgrow="ALWAYS">
                    <Label styleClass="donut-chart-title" text="Traffic" />
                    <Label styleClass="donut-chart-subtitle" text="Direct vs Referrals" />
                    <PieChart fx:id="trafficSourceDonutChart" legendVisible="false" prefHeight="200.0"
                              styleClass="donut-chart" labelsVisible="false" clockwise="true" startAngle="90" />
                </VBox>
            </HBox>

            <!-- Bottom Section - Bar Chart -->
            <VBox styleClass="bar-chart-card" VBox.vgrow="ALWAYS">
                <Label styleClass="bar-chart-title" text="Most Frequent Violation Law And Highest Point Laws" />
                <BarChart fx:id="barchart" prefHeight="200.0" animated="true" barGap="4" categoryGap="20">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" tickLabelFill="#2C3E50" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" tickLabelFill="#2C3E50" autoRanging="true" />
                    </yAxis>
                </BarChart>
            </VBox>
        </VBox>

        <!-- Right Progress Bar Section -->
        <VBox prefWidth="250.0" spacing="15.0" styleClass="progress-bar-container">
            <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>

            <!-- Progress Bar Items (repeated 11 times) -->
            <VBox spacing="5.0" styleClass="progress-item">
                <Label styleClass="progress-label" text="License Renewals" wrapText="true" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <ProgressBar progress="0.75" styleClass="custom-progress-bar" prefWidth="150.0" />
                    <Label styleClass="progress-value" text="75%" minWidth="40.0" />
                </HBox>
            </VBox>

            <!-- Repeat this VBox 10 more times with the same structure -->
            <!-- For brevity, I'll show one more as example -->
            <VBox spacing="5.0" styleClass="progress-item">
                <Label styleClass="progress-label" text="License Renewals" wrapText="true" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <ProgressBar progress="0.75" styleClass="custom-progress-bar" prefWidth="150.0" />
                    <Label styleClass="progress-value" text="75%" minWidth="40.0" />
                </HBox>
            </VBox>

            <!-- Repeat for remaining progress bars... -->

        </VBox>
    </HBox>
</AnchorPane>